# DBOS Configuration (Required)
DBOS_SYSTEM_DATABASE_URL=postgres://pas:pwd@localhost:5432/pas?sslmode=disable
DBOS_APPLICATION_VERSION=content-pipeline-v1
DBOS_QUEUE_NAME=default
DBOS_QUEUE_CONCURRENCY=4

# Simple-workflow Configuration (Optional - enables intent polling)
# If set, workers will poll workflow_intent table in addition to DBOS queue
WORKFLOW_DATABASE_URL=postgres://pas:pwd@localhost:5432/pas?sslmode=disable

# Content API Configuration
# Points to pas-server (which embeds simple-content)
CONTENT_API_URL=http://localhost:8080

# Worker HTTP Addresses
WORKER_HTTP_ADDR=:8081
PYTHON_WORKER_PORT=8082

# PostgreSQL Configuration (for standalone database)
# Only needed if running workers with their own database
POSTGRES_CONTAINER=pipeline-postgres
POSTGRES_USER=pipeline
POSTGRES_PASSWORD=pwd
POSTGRES_DB=pipeline
POSTGRES_PORT=5434
